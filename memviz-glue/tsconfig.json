{
  "extends": "../ts-base.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2015",
    "lib": ["ES2015", "DOM"],
    "sourceMap": true,
    "isolatedModules": true,
    "rootDir": "src",
    "outDir": "dist",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["jest.config.ts"]
}
